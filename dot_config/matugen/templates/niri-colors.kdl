// Dynamic Colors generated by Matugen
// This file overlays the main config

layout {
    focus-ring {
        active-color   "{{colors.primary.default.hex}}"
        inactive-color "{{colors.surface_variant.default.hex}}"
        urgent-color   "{{colors.error.default.hex}}"
    }

    border {
        active-color   "{{colors.primary.default.hex}}"
        inactive-color "{{colors.surface_variant.default.hex}}"
        urgent-color   "{{colors.error.default.hex}}"
    }

    shadow {
        color "{{colors.shadow.default.hex}}70"
    }

    tab-indicator {
        active-color   "{{colors.primary.default.hex}}"
        inactive-color "{{colors.surface_variant.default.hex}}"
        urgent-color   "{{colors.error.default.hex}}"
    }

    insert-hint {
        color "{{colors.primary.default.hex}}80"
    }
}

recent-windows {
    highlight {
        active-color   "{{colors.primary.default.hex}}"
        urgent-color   "{{colors.error.default.hex}}"
    }
}
